<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="mystyle">
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="green_button">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/green_but</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="red_button">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/red_but</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edit">
        <item name="android:background">@drawable/grey_edit</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="edit2">
        <item name="android:background">@drawable/edit2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="edit3">
        <item name="android:background">@drawable/edit3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="textView">
        <item name="android:background">@drawable/green_view</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="message">
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="check">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/grey_edit</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
